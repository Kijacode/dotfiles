{
    "env": {
        "browser": true,
        "commonjs": true,
        "amd": true,
        "es6": true,
        "mocha": true,
        "node": true,
        "mongo": false
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "extends": "eslint:recommended",
    "globals": {},
    "rules": {
        "camelcase": [
            "error", {
                "properties": "never"
            }
        ],
        "indent": [
            "error",
            4, {
                "SwitchCase": 1,
                "VariableDeclarator": 2
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "new-parens": "error",
        "no-empty": "error",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-unused-vars": "error",
        "no-multiple-empty-lines": [
            "error", {
                "max": 1
            }
        ],
        "no-nested-ternary": "error",
        "no-sparse-arrays": "error",
        "no-var": "error",
        "prefer-arrow-callback": "error"
    }
}